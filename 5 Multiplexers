#include <Arduino.h>
#include <Wire.h>
#include <Omron_D6FPH.h>

Omron_D6FPH mySensor[16];

#define TCAADDR1 0x70
#define TCAADDR2 0x71
#define TCAADDR3 0x72
#define TCAADDR4 0x73
#define TCAADDR5 0x74

void tcaselect(uint8_t i) {           //conditions to differentiate between the 5 multiplexers
  if (i > 16) return;
  if (i < 8) {
    Wire.beginTransmission(TCAADDR1);
    Wire.write(1 << i);
    Wire.endTransmission();
  } else if(7<i<16){
    Wire.beginTransmission(TCAADDR2);
    Wire.write(1 << (i-8));
    Wire.endTransmission();
  }else if(15 < i < 24) {
    Wire.beginTransmission(TCAADDR3);
    Wire.write(1 << (i-16));
    Wire.endTransmission();
  } 
  else if(23 < i < 32) {
    Wire.beginTransmission(TCAADDR4);
    Wire.write(1 << (i-24));
    Wire.endTransmission();
} else{
  Wire.beginTransmission(TCAADDR5);
    Wire.write(1 << (i-32));
    Wire.endTransmission();
}
}

void setup() {
  Serial.begin(9600); 
  Serial.println("The sketch has started");
  Wire.begin();

  for (int i = 0; i < 41; i++) {
    tcaselect(i);
    mySensor[i].begin(MODEL_0505AD3);    //for the 0-50 Pa sensor
  }
}

void loop() {                        // Counts from Sensor 0 to Sensor 7 on the first muxer, then from Sensor 8 to Sensor 15 on the second, etc.
  for (int i = 0; i < 41; i++) {     // Loop fÃ¼r alle Sensoren
    tcaselect(i);
    float pressure = mySensor[i].getPressure();
    if (isnan(pressure)) {
      Serial.println("Error: Could not read pressure data");
    } else {
      Serial.print("Differential Pressure : sensor ");
      Serial.println(i);
      Serial.println(pressure);
    }
  }
  delay(1000);
}
